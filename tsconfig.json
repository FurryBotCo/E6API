{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "src",
        "target": "es2017",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}